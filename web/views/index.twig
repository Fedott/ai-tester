{% extends "layout.twig" %}
{% block content %}
    <div class="container">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Workers</th>
                <th>Last activity</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for manager in managers%}
                {% if manager.isOnline %}
                    <tr>
                        <th scope="row">{{ manager.id }}</th>
                        <td>{{ manager.countWorkers }}</td>
                        <td>{{ manager.lastActivity|date('c') }}</td>
                        <td>
                            <a href="/manager/sub/{{ manager.id }}/1" class="btn btn-warning">Sub</a>
                            <a href="/manager/add/{{ manager.id }}/1" class="btn btn-success">Add</a>
                        </td>
                    </tr>
                {% endif %}
            {% endfor %}
            </tbody>
        </table>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Status</th>
                    <th>Last activity</th>
                    <th>Count runs</th>
                    <th>Work</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for worker in workers %}
                    {% if worker.isOnline %}
                        <tr>
                            <th scope="row">{{ worker.id }}</th>
                            <td>{{ worker.status }}</td>
                            <td>{{ worker.lastActiveTime|date('c') }}</td>
                            <td>{{ worker.countRuns }}</td>
                            <td>{{ worker.task }}</td>
                            <td>
                                {% if worker.task %}
                                    <a href="/stop/{{ worker.id }}" class="btn btn-warning">Stop</a>
                                {% else %}
                                    <a href="/start/{{ worker.id }}" class="btn btn-success">Start</a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
